<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:background="@drawable/custom_card">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Ajouter une nouveau client"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:paddingStart="20dp"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Nom du client"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black_primary"
        android:textSize="14sp"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/phoneNumberInput"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:paddingStart="20dp"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Numéro de téléphone"
        android:inputType="phone"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/phoneMarqueInput"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:paddingStart="20dp"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="La marque et modèle du téléphone"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black_primary"
        android:textSize="14sp"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/numeroSeriePhone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:paddingStart="20dp"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Numéro de série du téléphone"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black_primary"
        android:textSize="14sp"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/issueInput"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:paddingStart="20dp"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Indiquer la panne"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black_primary"
        android:textSize="14sp"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/dateInput"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:paddingStart="20dp"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Date"
        android:inputType="none"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <Spinner
        android:id="@+id/pieceId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:spinnerMode="dropdown"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"
        tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/montantNormal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:paddingStart="20dp"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Monant normal"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black_primary"
        android:textSize="14sp"
        android:focusable="false"
        android:clickable="false"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/montantNegocie"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Montant négocié"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/black_primary"
        android:textSize="14sp"
        tools:ignore="TouchTargetSizeCheck" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/saveRecordBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@drawable/custom_buttom"
        android:text="ENREGISTRER"
        android:textColor="@color/white"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />


</LinearLayout>