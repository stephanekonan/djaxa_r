<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginBottom="4dp"    xmlns:app="http://schemas.android.com/apk/res-auto">    <TextView        android:id="@+id/phoneModel"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/black_primary_opacity"        android:fontFamily="@font/poppinsbold"        android:textColor="@color/black_primary"        android:layout_marginHorizontal="16dp"        android:layout_marginTop="8dp"        app:layout_constraintHorizontal_bias="0.0"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        tools:ignore="HardcodedText" />    <TextView        android:id="@+id/issue"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/black_primary_opacity"        android:fontFamily="@font/poppinsbold"        android:textColor="@color/black_primary"        android:layout_marginStart="16dp"        android:layout_marginEnd="50dp"        android:layout_marginTop="10dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.0"        app:layout_constraintTop_toBottomOf="@id/phoneModel"        app:layout_constraintStart_toStartOf="parent"        tools:ignore="HardcodedText" />    <TextView        android:id="@+id/repairDate"        android:layout_width="100dp"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:background="@color/black_primary_opacity"        android:fontFamily="@font/poppinsregular"        android:textColor="@color/black_primary"        app:layout_constraintTop_toBottomOf="@id/issue"        app:layout_constraintStart_toStartOf="@id/issue"        tools:ignore="HardcodedText" />    <TextView        android:id="@+id/status"        android:layout_width="80dp"        android:layout_height="wrap_content"        android:padding="2dp"        app:layout_constraintStart_toEndOf="@+id/repairDate"        app:layout_constraintTop_toBottomOf="@id/issue"        android:layout_marginStart="16dp"        android:layout_marginTop="10dp"        android:background="@color/black_primary_opacity"        android:textColor="@color/black_primary"        tools:ignore="HardcodedText" /></androidx.constraintlayout.widget.ConstraintLayout>