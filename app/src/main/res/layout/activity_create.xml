<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="Nom du client"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black_primary"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="Numéro de téléphone"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/phoneMarqueInput"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="La marque et modèle du téléphone"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black_primary"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/numeroSeriePhone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="Numéro de série du téléphone"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black_primary"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/issueInput"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="Indiquer la panne"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black_primary"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/dateInput"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="Date"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <Spinner
                android:id="@+id/pieceId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:spinnerMode="dropdown"
                android:paddingStart="10dp"
                android:background="@drawable/custom_input"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/montantNormal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="Monant normal"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black_primary"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="false"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/montantNegocie"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_input"
                android:paddingStart="20dp"
                android:ems="10"
                android:fontFamily="@font/poppinsregular"
                android:hint="Montant négocié"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black_primary"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_buttom"
                android:gravity="center"
                android:text="ENREGISTRER"
                android:textColor="@color/white"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>