<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:paddingBottom="20dp"    android:background="@drawable/custom_card">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_marginHorizontal="15dp"        android:layout_marginTop="20dp"        android:fontFamily="@font/poppinsbold"        android:text="Ajouter une nouvelle pièce"        android:textColor="@color/black"        android:textSize="18sp"        tools:ignore="HardcodedText" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="15dp"        android:paddingStart="10dp"        android:layout_marginTop="20dp"        android:background="@drawable/custom_input"        tools:ignore="RtlSymmetry">    </RelativeLayout>    <Spinner        android:id="@+id/categoryId"        android:layout_width="match_parent"        android:layout_height="45dp"        android:layout_marginHorizontal="15dp"        android:spinnerMode="dropdown"        android:paddingStart="10dp"        android:background="@drawable/custom_input"        tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />    <EditText        android:id="@+id/pieceNameInput"        android:layout_width="match_parent"        android:layout_height="45dp"        android:layout_marginTop="15dp"        android:layout_marginBottom="0dp"        android:layout_marginHorizontal="15dp"        android:background="@drawable/custom_input"        android:drawablePadding="12dp"        android:ems="10"        android:fontFamily="@font/poppinsregular"        android:hint="Nom de la pièce"        android:inputType="text"        android:paddingHorizontal="15dp"        android:textColor="@color/black"        android:textSize="14sp"        app:layout_constraintTop_toBottomOf="@+id/appBar"        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />    <EditText        android:id="@+id/pieceQuantityInput"        android:layout_width="match_parent"        android:layout_height="45dp"        android:layout_marginTop="15dp"        android:layout_marginBottom="0dp"        android:layout_marginHorizontal="15dp"        android:background="@drawable/custom_input"        android:drawablePadding="12dp"        android:ems="10"        android:fontFamily="@font/poppinsregular"        android:hint="Quantité"        android:inputType="number"        android:paddingHorizontal="15dp"        android:textColor="@color/black"        android:textSize="14sp"        app:layout_constraintTop_toBottomOf="@+id/appBar"        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />    <EditText        android:id="@+id/piecePriceInput"        android:layout_width="match_parent"        android:layout_height="45dp"        android:layout_marginTop="15dp"        android:layout_marginBottom="0dp"        android:layout_marginHorizontal="15dp"        android:background="@drawable/custom_input"        android:drawablePadding="12dp"        android:ems="10"        android:fontFamily="@font/poppinsregular"        android:hint="Prix unitaire"        android:inputType="number"        android:paddingHorizontal="15dp"        android:textColor="@color/black"        android:textSize="14sp"        app:layout_constraintTop_toBottomOf="@+id/appBar"        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />    <ProgressBar        android:id="@+id/loadingProgressBar"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:layout_gravity="center"        android:visibility="gone" />    <TextView        android:id="@+id/saveRecordBtn"        android:layout_width="match_parent"        android:layout_height="40dp"        android:clickable="true"        android:focusable="true"        android:layout_marginTop="30dp"        android:layout_marginHorizontal="15dp"        android:layout_gravity="center_vertical"        android:gravity="center"        android:background="@drawable/custom_buttom"        android:text="ENREGISTRER"        android:textColor="@color/white"        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" /></LinearLayout>