<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:background="@drawable/custom_card"
    tools:context=".fragments.DeleteDialogFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textSize="22sp"
        android:textColor="@color/black_primary"
        android:fontFamily="@font/poppinsbold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Êtes-vous sûr de vouloir supprimer cette donnée ?"
        android:textSize="16sp"
        android:textColor="@color/black_primary"
        android:fontFamily="@font/poppinsregular"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <GridLayout
        android:id="@+id/actionsBtn"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_decline_btn"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Non"
            android:textColor="@color/black_primary"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/custom_confirm_btn"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Oui"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    </GridLayout>

</LinearLayout>